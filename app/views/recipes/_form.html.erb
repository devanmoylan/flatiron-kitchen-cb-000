<%= form_for recipe do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.fields_for :ingredients, recipe.ingredients.build do |i| %>
        <%= i.label :name %>
        <%= i.text_field :name %>
    <% end %>
    <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %>
    <%= f.submit %>
<% end %>